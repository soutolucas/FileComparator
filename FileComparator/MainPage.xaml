<Page
    x:Class="FileComparator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FileComparator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid  VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBox x:Name="txtPath1"/>
        <TextBox Grid.Row="1" x:Name="txtPath2" />
        <TextBox Grid.Row="2" x:Name="txtMove"/>
        <TextBox Grid.Row="3" x:Name="txtCount"/>

        <Button Grid.Row="4" x:Name="btnStart" Content="Start" HorizontalAlignment="Right" Click="BtnStart_Click"/>
    </Grid>
</Page>
